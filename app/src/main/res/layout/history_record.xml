<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRedeemID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/his_redeemID" />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/his_redeemItemName" />

    <TextView
        android:id="@+id/tvPointUsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/his_pointsUsed" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/his_userName" />

    <TextView
        android:id="@+id/tvMercID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/his_MerID" />

    <TextView
        android:id="@+id/tvRedeemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/his_RedeemDate" />
</LinearLayout>